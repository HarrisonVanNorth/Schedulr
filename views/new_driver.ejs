<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <!-- Required Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>New Driver</title>    <!-- Compiled and minified JavaScript -->
  </head>
  <body class="blue-grey darken-1">
    <div class="container">
      <h1 class="center-align white-text">Register A New Driver</h1>
      <div class="row">
        <form class="col s6 offset-s3" action="/add_driver" method="post">
      <!-- driver name -->
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name="name" placeholder="Driver Name">
        </div>
      </div>
      <!-- Img URL -->
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name="img_url" placeholder="Driver Picture">
        </div>
      </div>
      <!-- Wage -->
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name="wage" placeholder="Driver Wage">
        </div>
      </div>
      <!-- Driver Days Off -->
      <div class="row">
        <div class="input-field col s12">
          <input type="text" name="daysOff" placeholder="Driver Days Off">
        </div>
      </div>
      <button class="waves-effect waves-dark btn" type="submit">Submit
        <i class="material-icons right">send</i></button>
      </form>
    </div>
      <div class="row">
        <div class="col s6 offset-s3">
          <a href="/homepage"><button class="left center-align btn waves-effect waves-dark offset-s3" type="button" name="button">Back</button></a>
        </div>
      </div>
    </div>
  </body>
</html>
